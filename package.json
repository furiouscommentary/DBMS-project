{
  "name": "railway-management-system",
  "version": "1.0.0",
  "description": "Railway Management System with Express, MySQL and React",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "client": "cd client && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "express-validator": "^7.0.1",
    "concurrently": "^8.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}